										<p><input type="text" placeholder="Producto" name="producto" id="producto"
												required></p>
										<p> <input type="text" placeholder="Imagen (Link)" name="imagen" id="imagen"
												required></p>
										<p><input type="number" placeholder="Precio" name="precio" id="precio" required>
										</p>
										<p><textarea name="description" id="description" cols="15" rows="5"
												placeholder="Descripcion" required></textarea></p>
										<input type="hidden" name="token" value="FsWga4&@f6aw" />
										<p><input type="submit" value="Enviar"></p>
									</form>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>

			<!-- Lista de Productos y eliminar -->
			<div class="table-responsive">
				<div class="Consultas">
					<table class="table table-striped table" bgcolor="white" height="150px" width="150px" align="center"
						border="red">
						<tr style="color:white" align="center" id="Pintar">
							<td>Nombre </td>
							<td>Imagen </td>
							<td>Precio </td>
							<td>Descripcion </td>
							<td> </td>

						</tr>
						<%productosList.forEach(productos=> { %>
							<form action="/productos/editar/<%= productos.id %>" method="post">
								<tr>
									<td width="18%">
										<textarea id="editar" class="edicion" type="text" name="nombre"
											value="<%= productos.nombre %>" cols="1" rows="1"
											readonly="true"> <%= productos.nombre %> </textarea>
									</td>
									<td width="5%">
										<img src="<%= productos.img %>" alt="">
									</td>
									<td width="3%">
										<input id="editar" class="edicionNum" type="number" name="precio"
											value="<%= productos.precio %>" readonly="true">
									</td>
									<td style="overflow-wrap: anywhere;" width="64%">
										<textarea id="editar" class="edicion" type="textarea" name="descripcion"
											cols="30" rows="3" readonly="true"> <%= productos.descripcion %></textarea>
									</td>
									<td width="5%">

										<div style="display: flex; flex-direction:row;">
											<button type="submit" class="save" id="<%=productos.id %>" name="x">
												üíæ </button>
							</form>
							<form action="/productos/eliminar/<%=productos.id%>" method="POST">
								<button type="submit" class="delete" onClick="borrar()" id="<%=productos.id %>"
									name="x">
									‚ùå </button>
							</form>

							<button class="edit" id="edit" name="x">
								‚úèÔ∏è </button>

							<button class="edit" id="cancelEdit" name="x" style="display:none;">
								‚¨ÖÔ∏è </button>

				</div>
				</td>
				</tr>
				<% })%>
					</table>

			</div>
			</div>

		</section>

		<!-- Consultas lista -->

		<section class="consultaBase" id="consultas">
			<div class="table-responsive">
				<div class="Consultas">
					<table class="table table-striped table" bgcolor="white" height="200px" width="150px" align="center"
						border="red">
						<tr style="color:white" align="center" id="Pintar">
							<td>Nombre </td>
							<td>Tel√©fono </td>
							<td>Email </td>
							<td>Asunto </td>
							<td>Texto </td>
							<td> </td>
						</tr>
						<%consultasList.forEach(consultas=> { %>
							<tr>
								<td width="10%">
									<input id="editar" class="edicion" type="text" name="nombre"
										value="<%= consultas.nombre %>" readonly="true">

								</td>
								<td width=10px>
									<%= consultas.telefono %>
								</td>
								<td width=24px>
									<%= consultas.email %>
								</td>
								<td>
									<%= consultas.asunto %>
								</td>
								<td style="overflow-wrap: anywhere;">
									<%= consultas.mensaje %>
								</td>
								<td width="10%">
									<form action="/consultas/eliminar/<%=consultas.id%>" method="POST">

										<button type="submit" class="delete2" onClick="borrar()" id="<%=consultas.id %>"
											name="x">
											‚ùå </button>
									</form>
								</td>
							</tr>
							<% })%>
					</table>

				</div>
			</div>
		</section>
		<!-- Lista de Correos -->
		<section class="correosDisplay" id="correosDisplay">
			<div class="table-responsive">
				<div class="corr">
					<table class="table table-striped table" bgcolor="white" height="200px" width="100px" align="center"
						border="red">
						<tr style="color:white" align="center" id="Pintar">
							<td>Correos </td>
							<td> Fecha a√±adida </td>
							<td> </td>
						</tr>
						<%correosList.forEach(correos=> { %>

							<tr>
								<td>
									<%= correos.correo %>
								</td>
								<td>
									<%= correos.createdAt%>
								</td>
								<td>
									<form action="/correos/eliminar/<%=correos.id%>" method="POST">

										<button type="submit" class="delete2" onClick="borrar()" id="<%=correos.id %>"
											name="x">
											‚ùå </button>
									</form>
								</td>
							</tr>
							<% })%>
					</table>

				</div>
			</div>
		</section>
		<!-- Agregar noticias -->
		<section class="productos" id="noticias">
			<div class="contact-from-section mt-150 mb-150">
				<div class="container">
					<div class="row">
						<div class="col-lg-8 mb-5 mb-lg-0">
							<div class="Cuadro">
								<div id="form_status"></div>
								<div class="textoProductos">
									<form action="/admin/noticias" method="POST">
										<h1>Agregar una nueva noticia</h1>
										<p><input type="text" placeholder="Titulo" name="titulo" id="titulo" required>
										</p>
										<p> <input type="text" placeholder="Imagen (Link)" name="img" id="img" required>
										</p>
										<p><input type="text" placeholder="Autor" name="publicador" id="publicador"
												value="<%= usuario.nombreCompleto %>" required>
										</p>
										<p><input type="text" placeholder="Resumen" name="resumen" id="resumen"
												required>
										</p>
										<p><textarea name="texto" id="texto" cols="15" rows="5" placeholder="Noticia"
												required></textarea></p>

										<input type="hidden" name="token" value="FsWga4&@f6aw" />
										<p><input type="submit" value="Agregar"></p>
									</form>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>


			<!-- Lista de noticias -->
			<div class="table-responsive">
				<div class="Consultas" id="consultas">
					<table class="table table-striped table" bgcolor="white" height="200px" width="150px" align="center"
						border="red">
						<tr style="color:white" align="center" id="Pintar">
							<td>Nombre </td>
							<td>Imagen </td>
							<td>Autor </td>
							<td>Descripcion </td>
							<td>Texto </td>
							<td> </td>

						</tr>
						<%noticiasList.forEach(noticias=> { %>
							<form action="/noticias/editar/<%= noticias.id %>" method="post">
								<tr>
									<td width="10%">
										<textarea id="editar" class="edicion" type="text" name="titulo"
											value="<%= noticias.titulo %>" cols="1" rows="1"
											readonly="true"> <%= noticias.titulo %></textarea>
									</td>
									<td width="5%">
										<img src="<%= noticias.img %>" alt="">
									</td>
									<td width="5%"">
									<textarea id="editar" class="edicion" type="text" name="publicador" value="<%= noticias.publicador %>"
										cols="1" rows="1" readonly="true">
										<%= noticias.publicador %> </textarea>
									</td>
									<td style="overflow-wrap: anywhere;" width="20%">
										<textarea id="editar" class="edicion" type="text" name="resumen"
											value="<%= noticias.resumen %>" cols="3" rows="5"
											readonly="true"> <%= noticias.resumen %></textarea>

									</td>
									<td style="overflow-wrap: anywhere;" width="20%">
										<textarea id="editar" class="edicion" type="text" name="texto"
											value="<%= noticias.texto %>" cols="3" rows="5"
											readonly="true"> <%= noticias.texto %></textarea>
									</td>
									<td width="5%">
										<div style="display: flex; flex-direction:row;">
											<button type="submit" class="save" id="<%=noticias.id %>" name="x">
