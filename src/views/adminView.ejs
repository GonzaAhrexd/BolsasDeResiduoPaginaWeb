							</form>
							<form action="/noticias/eliminar/<%=noticias.id%>" method="POST">

								<button type="submit" class="delete" onClick="borrar()" id="<%=noticias.id %>" name="x">
									‚ùå </button>
							</form>

							<button class="edit" id="edit" name="x">
								‚úèÔ∏è </button>
								<button class="edit" id="cancelEdit" name="x" style="display:none;">
									‚¨ÖÔ∏è </button>
							

				</div>
				</td>
				</tr>
